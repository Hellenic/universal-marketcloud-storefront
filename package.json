{
  "name": "universal-marketcloud-storefront",
  "description": "Boilerplate for an universal eCommerce storefront on top of Marketcloud",
  "author": "Hannu Kärkkäinen <hannu.karkkainen@gmail.com> (http://github.com/hellenic)",
  "license": "MIT",
  "version": "0.9.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/hellenic/universal-marketcloud-storefront"
  },
  "homepage": "https://github.com/hellenic/universal-marketcloud-storefront",
  "keywords": [
    "react",
    "redux",
    "isomorphic",
    "universal",
    "ecommerce",
    "marketcloud",
    "material ui",
    "webpack",
    "express",
    "hot reloading",
    "react-hot-reloader",
    "boilerplate",
    "babel"
  ],
  "main": "bin/server.js",
  "scripts": {
    "start": "concurrently --kill-others \"npm run start-prod\"",
    "start-prod": "better-npm-run start-prod",
    "build": "better-npm-run build",
    "postinstall": "npm run build",
    "lint": "eslint -c .eslintrc src/",
    "start-dev": "better-npm-run start-dev",
    "watch-client": "better-npm-run watch-client",
    "dev": "concurrently --kill-others \"npm run watch-client\" \"npm run start-dev\"",
    "test": "karma start",
    "deploy": "npm run docker-build && npm run docker-stop && npm run docker-run",
    "docker-build": "sudo docker build -t hellenic/universal-marketcloud-storefront .",
    "docker-stop": "sudo docker stop $(sudo docker ps --filter=[image=hellenic/universal-marketcloud-storefront] -q)",
    "docker-run": "sudo docker run -p 8880:8880 -d hellenic/universal-marketcloud-storefront"
  },
  "betterScripts": {
    "start-prod": {
      "command": "node ./bin/server.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "production",
        "PORT": 8880
      }
    },
    "start-dev": {
      "command": "node ./bin/server.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "development",
        "PORT": 3000
      }
    },
    "watch-client": {
      "command": "node webpack/webpack-dev-server.js",
      "env": {
        "UV_THREADPOOL_SIZE": 100,
        "NODE_PATH": "./src",
        "PORT": 3000
      }
    },
    "build": {
      "command": "webpack --verbose --colors --display-error-details --config webpack/prod.config.js",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
